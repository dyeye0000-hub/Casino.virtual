<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <Button android:id="@+id/btnLogin" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/login"/>
    <Button android:id="@+id/btnRoulette" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/roulette" android:layout_marginTop="12dp"/>
    <Button android:id="@+id/btnSlots" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/slots" android:layout_marginTop="12dp"/>
    <Button android:id="@+id/btnAdmin" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/admin" android:layout_marginTop="12dp"/>
</LinearLayout>
